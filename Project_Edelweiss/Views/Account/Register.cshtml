@using Microsoft.AspNetCore.Mvc.Localization
@model RegisterViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Register"];
}

<h2>@Localizer["Register"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>@Localizer["Create a new account"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@Localizer["Email"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Password"]</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["ConfirmPassword"]</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@Localizer["UserName"]</label>
                <input asp-for="UserName" id="userName" class="form-control" />
            </div>
            <div class="form-group">
                <label>@Localizer["AgentId"]</label>
                <select asp-for="AgentId"  asp-items="@ViewBag.agents">
                    <option selected="selected" disabled="disabled">@Localizer["All"]</option>
                </select>
                <span asp-validation-for="AgentId" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                    <label asp-for="AgentId"></label>
                    <input asp-for="AgentId" class="form-control" />
                    <span asp-validation-for="AgentId" class="text-danger"></span>
                </div>*@
            <button type="submit" class="btn btn-sm btn-danger">@Localizer["Register"]</button>
        </form>
    </div>
</div>

