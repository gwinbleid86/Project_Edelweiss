@using Microsoft.AspNetCore.Mvc.Localization
@using X.PagedList
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@using Microsoft.AspNetCore.Mvc.Localization
@model X.PagedList.IPagedList<Edelweiss.BLL.DTO.AgentDTO>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Index"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" asp-controller="Agent">@Localizer["Create New"]</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Localizer["Name"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="Agent" asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                    <a asp-controller="Agent" asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-controller="Agent" asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
    new PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })
