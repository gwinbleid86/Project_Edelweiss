@using Microsoft.AspNetCore.Mvc.Localization
@model Edelweiss.BLL.DTO.RangeDTO
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@Localizer["Edit"]</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MinValue" class="control-label">@Localizer["MinValue"]</label>
                    <input asp-for="MinValue" class="form-control" />
                    <span asp-validation-for="MinValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxValue" class="control-label">@Localizer["MaxValue"]</label>
                    <input asp-for="MaxValue" class="form-control" />
                    <span asp-validation-for="MaxValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Edit"]" class="btn btn-sm btn-danger" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </div>


</div>

