<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Localizer["Autorization"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                    <div class="form-group">
                        <label class="control-label">@Localizer["Login"]</label>
                        <input name="UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">@Localizer["Password"]</label>
                        <input type="Password" name="password" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="@Localizer["Enter"]" class="btn btn-sm btn-danger" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Close"]</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>