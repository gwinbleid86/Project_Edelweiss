@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Search"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form asp-controller="Client" asp-action="Search" method="post" class="card card-sm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fa fa-search h4 text-body"></i>
                    </div>
                    <!--end of col-->
                    <div id="passp1" class="col">
                        <input id="passp" class="form-control form-control-lg form-control-borderless" type="search" placeholder="@Localizer["Search Passport"]" name="passport">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <input id="search" class="btn btn-sm btn-danger" type="submit" value="@Localizer["Search"]">
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form asp-controller="Client" asp-action="SearchByLastName" method="post" class="card card-sm">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fa fa-search h4 text-body"></i>
                    </div>
                    <!--end of col-->
                    <div class="col">
                        <input id="lastName" class="form-control form-control-lg form-control-borderless" type="search" placeholder="@Localizer["Search by LastName"]" name="lastName">
                    </div>
                    <!--end of col-->
                    <div class="col-auto">
                        <input class="btn btn-sm btn-danger" type="submit" value="@Localizer["Search"]">
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
</div>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

