@using Microsoft.AspNetCore.Mvc.Localization
@model Edelweiss.BLL.DTO.ClientDTO
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@Localizer["Edit"]</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">@Localizer["Name"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PassportData" class="control-label">@Localizer["PassportData"]</label>
                    <input asp-for="PassportData" class="form-control" />
                    <span asp-validation-for="PassportData" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobilePhone" class="control-label">@Localizer["MobilePhone"]</label>
                    <input asp-for="MobilePhone" class="form-control" />
                    <span asp-validation-for="MobilePhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Save"]" class="btn btn-sm btn-danger" />
                </div>
            </form>
        </div>
    </div>

    @*<div>
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </div>*@

</div>


