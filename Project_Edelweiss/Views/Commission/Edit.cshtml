@using Microsoft.AspNetCore.Mvc.Localization
@model Edelweiss.BLL.DTO.CommissionsDividingDTO
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h2>@Localizer["Description"]</h2>
    <hr />
    <h4>@Localizer["Edit"]</h4>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AgentFromCommission" class="control-label">@Localizer["AgentFromCommission"]</label>
                    <input asp-for="AgentFromCommission" class="form-control" />
                    <span asp-validation-for="AgentFromCommission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AgentToCommission" class="control-label">@Localizer["AgentToCommission"]</label>
                    <input asp-for="AgentToCommission" class="form-control" />
                    <span asp-validation-for="AgentToCommission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SystemCommission" class="control-label">@Localizer["SystemCommission"]</label>
                    <input asp-for="SystemCommission" class="form-control" />
                    <span asp-validation-for="SystemCommission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Save"]" class="btn btn-sm btn-danger" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </div>

</div>


